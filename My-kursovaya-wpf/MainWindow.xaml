<Window x:Class="My_kursovaya_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_kursovaya_wpf"
        mc:Ignorable="d"
        Title="Учет служебного транспорта ГИБДД" Height="700" Width="900" ResizeMode="NoResize"  Icon="/Resources/Background.png">
    <Grid RenderTransformOrigin="0.518,0.493">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="#333CCC" Orientation="Horizontal">
            <Image Source=".//Resources/Background.png" Width="75" HorizontalAlignment="Left" Margin="10 0 0 0"/>
            <Button x:Name="btnBack" Click="btnBack_Click" Width="150" Height="30"
                    Foreground="Black"  Margin="600 0 0 0  " FontFamily="Arial" FontSize="17"  Content="Назад"
                  />
        </StackPanel>
        <Frame x:Name="frameMain" Grid.Row="1" NavigationUIVisibility="Hidden"/> 
        
    </Grid>
</Window>
