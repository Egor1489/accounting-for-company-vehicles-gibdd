            <ScrollViewer>
            <StackPanel Orientation="Vertical">
                <ListBox Name="ListSotrudniki"
                         Background="Transparent"
                         Width="650"
                         Height="500"
                         >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ListBoxItem BorderBrush="Blue">
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock
                                        Text="ФИО сотрудника:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtName"
                                        Text="{Binding name}"
                                        Style="{StaticResource lstTblk}"
                                        />
                                            <TextBlock
                                        Text="Должность:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtDolzhnost"
                                        Text="{Binding dolzhnost}"
                                        Style="{StaticResource lstTblk}"
                                        
                                        />
                                            <TextBlock
                                        Text="Звание:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtZvanie"
                                        Text="{Binding zvanie}"
                                        Style="{StaticResource lstTblk}"
                                        
                                        />
                                            <TextBlock
                                        Text="Возвраст:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtAge"
                                        Text="{Binding age}"
                                        Style="{StaticResource lstTblk}"
                                        
                                        />
                                            <TextBlock
                                        Text="Контакты:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtCon"
                                        Text="{Binding contact}"
                                        Style="{StaticResource lstTblk}"
                                        
                                        />
                                            <TextBlock
                                        Text="Отдел:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtOtdel"
                                        Text="{Binding otdel}"
                                        Style="{StaticResource lstTblk}"
                                        
                                        />
                                            <TextBlock
                                        Text="Адрес проживания:"
                                        Style="{StaticResource lstTblk}"/>
                                            <TextBlock
                                        Name="txtAdres"
                                        Text="{Binding adres}"
                                        Style="{StaticResource lstTblk}"
                                        
                                        />
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical">
                                            <Button
                                                Name="btnEdit"
                                                Style="{StaticResource mainBtn}"
                                                Content="Редактировать"
                                                Click="btnEdit_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                
                            </ListBoxItem>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                </ListBox>
            </StackPanel>
        </ScrollViewer>
            
        </StackPanel>
       
        
    </Grid>
</Page>
